<%=image_tag("mens_tshirts.jpg", alt: "MyInc Logo",class: "imgge_nav",style: "width:100%")%>
<div class="container pt-4">
  <div class="row">
     <% @products.each do |product|%>
      <div class="col col-sm-4 pt-4">
        <div class="card" style="width: 25rem;">
          <%=image_tag(product.pimage_url.to_s, alt: "MyInc Logo",class: "imgge_nav card-img-top")%>
          <div class="card-body">
            <h5 class="card-title text-center"><%=product.name%></h5>
            <h6 class="card-title text-center">Price: <%=product.price%></h6>
          </div>
          <div class="card-footer ">
            <%= link_to ' ', product_likes_path(product), method: :post,class: "text-right fa fa-thumbs-up" %>
            <%=link_to 'View' ,product_path(product),class: "float-right"%>

            
          </div>
        </div>
      </div>
    <%end%>
  </div>
</div>